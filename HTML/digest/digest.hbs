}
.img-heart {
  width: 16px;
  height: 14.170px;
}
.message-body-image {
  height: 200px;
  max-width: 500px;
  background-image: url('{{this.meta.photo.thumbnail_url}}');
  background-repeat: repeat-y no-repeat;
  background-size: cover;
  background-position: center;
  border-radius: 3px;
  margin-top: 10px;
}
